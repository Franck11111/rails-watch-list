<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : asset_path('list_background.png') %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<br>
<div class="container" id="show-content">
  <div class="buttons d-flex float-left pl-200">
    <div class="button mr-2">
      <%= link_to 'Back to my lists', lists_path, class: "btn btn-ghost" %>
    </div>
    <div class="button">
      <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-gradient" %>
    </div>
  </div>

  <br><br><br>

<table class="container" id="show-table">
  <thead>
    <tr>
      <th><h2>Movie</h2></th>
      <th><h2>Comment</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list.bookmarks.each do |bookmark| %>
      <tr>
        <td><strong><%= bookmark.movie.title %></strong></td>
        <td><%= bookmark.comment %></td>
        <td><%= link_to 'Delete comment', bookmark_path(bookmark), class: "btn btn-red", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<br>

<div class="footer">
    <div class="links">
      <a href="#">
        <i class= "fab fa-fw fa-facebook-f"></i>
      </a>
      <a href="#">
        <i class="fab fa-fw fa-github"></i>
      </a>
      <a href="#">
        <i class="fab fa-fw fa-twitter"></i>
      </a>
      <a href="#">
        <i class="fab fa-fw fa-instagram"></i>
      </a>
      <p>
        "This website was coded with
        <i class="fas fa-heart"></i>
        by Franck."
      </p>
    </div>
  </div>
